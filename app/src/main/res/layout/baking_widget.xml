<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_item_linear_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widget_baking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_title_padding"
        android:layout_margin="@dimen/widget_default_text_size"
        android:background="@android:color/white"
        android:textColor="@color/colorDark"
        android:text="@string/loading"
        android:textSize="@dimen/widget_default_text_size"
        android:textStyle="bold"/>

</LinearLayout>