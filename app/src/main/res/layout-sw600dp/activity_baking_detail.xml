<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fragment_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="com.leme.cookbook.MainActivity">

    <FrameLayout
        android:id="@+id/detail_fragment"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="match_parent"
        android:layout_weight="@dimen/tablet_layout_left_weight"/>

    <View
        android:layout_width="@dimen/tablet_layout_divider_weight"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/steps_fragment"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="match_parent"
        android:layout_weight="@dimen/tablet_layout_right_weight"/>

</LinearLayout>